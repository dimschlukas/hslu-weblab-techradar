# MongoDB Configuration
MONGO_HOST=database
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=example
MONGO_INITDB_DATABASE=techradardb

# App Database Credentials
MONGO_APP_USERNAME=appuser
MONGO_APP_PASSWORD=securepassword

# Connection URI (automatically picked up by services)
MONGO_URI=mongodb://${MONGO_APP_USERNAME}:${MONGO_APP_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_INITDB_DATABASE}

# Backend Configuration
BACKEND_PORT=3000
JWT_SECRET=securesecret

# Frontend Configuration
FRONTEND_PORT=80
BACKEND_URL=http://localhost:${BACKEND_PORT}
